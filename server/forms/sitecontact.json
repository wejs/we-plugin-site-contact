{
  "title": "sitecontact.form.title",
  "method": "post",
  "action": "/site-contact",

  "fields": {
    "name": {
      "type": "text",
      "allowNull": false
    },
    "subject": {
      "type": "sitecontact/subject-selector"
    },
    "email": {
      "type": "email",
      "defaultValue": "",
      "validate": { "isEmail": true },
      "allowNull": false
    },
    "phone": {
      "type": "phone/cell",
      "defaultValue": null,
      "allowNull": true
    },

    "message": {
      "type": "textarea",
      "formFieldAttributes": {
        "rows": 6
      },
      "allowNull": false
    },
    "recaptcha": {
      "type": "recaptcha"
    }
  },
  "actions": {
    "submit": {
      "type": "submit",
      "defaultValue": "save"
    }
  }
}